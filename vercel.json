{
    "builds": [{
        "src": "inventoryproject/wsgi.py",
        "use": "@vercel/python",
        "config": {
            "maxLambdaSize": "15mb",
            "runtime": "python3.12.1",
            "buildCommand": "python manage.py collectstatic --noinput"
        }
    }],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1",
            "headers": {
                "cache-control": "s-maxage=604800"
            }
        },
        {
            "src": "/media/(.*)",
            "dest": "/media/$1",
            "headers": {
                "cache-control": "s-maxage=604800"
            }
        },
        {
            "src": "/(.*)",
            "dest": "inventoryproject/wsgi.py"
        }
    ],
    "functions": {
        "api/*": {
            "memory": 512,
            "maxDuration": 10
        }
    }
}
